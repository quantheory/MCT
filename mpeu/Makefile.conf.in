# The default design requirement for this library is to use the OS
# specific default REAL kind for all its REAL type variables, while
# supports both REAL and DOUPLE PRECISION kinds for its interfaces
# through the Fortran 90 generic interface feature. (Jing Guo)

_I              = @MPILIBS@

DEFS            = @MACHDEFS@

FPP		= @FPP@
FPPFLAGS	= @FPPFLAGS@

CC		= @CC@
CFLAGS          = -O

FC		= @FC@
FFLAGS		= @FFLAGS@ @BIT64@
F90FLAGS        = @F90FLAGS@

MUPDATE         = @MUPDATE@

.c.o:
	$(CC) -c $(CFLAGS) $*.c

@FRULE@:
	$(FC) -c $(_I) $(DEFS) $(FFLAGS) $*.F

@F90RULE@:
	$(FC) -c $(_I) $(DEFS) $(FFLAGS) $(F90FLAGS) $*.F90

@FRULECPP@:
	$(FPP) $(FPPFLAGS) $(_I) $(DEFS) $*.F $*.f
	$(FC) -c $(FFLAGS) $(_I) $*.f
	$(RM) $*.f

@F90RULECPP@:
	$(FPP) $(FPPFLAGS) $(_I) $(DEFS) $*.F90 $*.f90
	$(FC) -c $(FFLAGS) $(F90FLAGS) $(_I) $*.f90
	$(RM) $*.f90

